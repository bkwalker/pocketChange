<h1>Listing offers</h1>

<table>
  <tr>
    <th>Item</th>
    <th>User</th>
    <th>Amount</th>
    <th>Counter amount</th>
    <th>Payment method</th>
    <th>Pickup time</th>
    <th>Delivery method</th>
    <th>Accepted</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.item_id %></td>
    <td><%= offer.user_id %></td>
    <td><%= offer.amount %></td>
    <td><%= offer.counter_amount %></td>
    <td><%= offer.payment_method %></td>
    <td><%= offer.pickup_time %></td>
    <td><%= offer.delivery_method %></td>
    <td><%= offer.accepted %></td>
    <td><%= offer.active %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

