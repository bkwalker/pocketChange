<h1>Listing location_addresses</h1>

<table>
  <tr>
    <th>Street</th>
    <th>Zip</th>
    <th>City</th>
    <th>State</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @location_addresses.each do |location_address| %>
  <tr>
    <td><%= location_address.street %></td>
    <td><%= location_address.zip %></td>
    <td><%= location_address.city %></td>
    <td><%= location_address.state %></td>
    <td><%= location_address.location_id %></td>
    <td><%= link_to 'Show', location_address %></td>
    <td><%= link_to 'Edit', edit_location_address_path(location_address) %></td>
    <td><%= link_to 'Destroy', location_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

