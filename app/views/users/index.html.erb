<h1>Listing users</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Picture</th>
    <th>Rating</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.picture %></td>
    <td><%= user.rating %></td>
    <td><%= user.active %></td>
    <td><%= user.id %></td>
    <td><%= link_to 'Show', user %></td>
    <% if can? :update user %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end %>
    <% if can? :destroy user %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

