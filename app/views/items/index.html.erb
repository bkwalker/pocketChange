<h1>Listing items</h1>

<table>
  <tr>
    <th>User</th>
    <th>Location</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Picture</th>
    <th>Price negotiable</th>
    <th>Condition</th>
    <th>Sold</th>
    <th>Tag</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.user_id %></td>
    <td><%= item.location_id %></td>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= item.price %></td>
    <td><%= item.picture %></td>
    <td><%= item.price_negotiable %></td>
    <td><%= item.condition %></td>
    <td><%= item.sold %></td>
    <td><%= item.tag %></td>
    <td><%= item.active %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

