<div id="filterrific_results">
  <div class="container">
     <ul class="row" >
         <% @items.each do |item| %>
  	    <li class="col-xs-4" style="margin-left:20px; width: 300px; padding-bottom:30pt; list-style-type: none; text-align:center">
              <%= link_to image_tag(item.picture.url, size:"120x120"), item %>
      		<br>
      		<%= item.name %> 
      		<br>
      		<%= number_to_currency(item.price) %> 
  	    </li>
        <% end %>
     </ul>
  </div>
</div>