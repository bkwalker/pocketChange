<div id="filterrific_results" class="container">
   <ul class="row" >
      <br>
        <% @items.each do |item| %>
            <li class="col-lg-3" style="padding-bottom: 30pt; list-style-type: none; text-align:center">
            <div style= "border: 1px solid">       
                <%= link_to image_tag(item.picture.url, size:"120x120"), item %>
            </div>
            
            <div style= "border: 1px solid; background-color: #DADADA">
                <%= item.name %> 
               <br>
                <%= number_to_currency(item.price) %>     
            </div>
            </li>
        <% end %>
   </ul>
</div>