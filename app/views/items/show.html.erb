<p id="notice"><%= notice %></p>
<table>
  <tr>
    <td>
      <h1> <%= @item.name %> from </h1>
    </td>
    <td>
      <h1 style="padding-left:.2em"><%= link_to User.find_by_id(@item.user_id).proper_name, User.find_by_id(@item.user_id) %> </h1> 
    </td>
  </tr>
</table>

<table>
  <tr>
    <td style="padding-left:10%; padding-top: 3%">
        <%= image_tag(@item.picture.url, class:"item-size", :style=>"border-style: solid; border-width:1px") %>
    </td>
    <td style="width:50px">
    </td>
    <td style="position: absolute; top: 20%">
        <h2>Price: <%= number_to_currency(@item.price) %> <br>
        <b>Condition:</b> <%= @item.condition_name %> <br>
        <b>Price Negotiable:</b> <%= @item.price_negotiable ? "Yes" : "No"  %></h2>

        <button type="button" class="btn btn-primary btn-md" data-toggle="modal" style="width: 100%" data-target="#myModal">
        Buy
      </button>

      <%= render 'offers/form' %> 
    </td>
  </tr>
</table>
<br>

<b style="font-size: 16pt; padding-left:4%">Tags:</b><br>
<p style="font-size: 16pt; padding-left:6%"><%= @item.tag %></p>

<b style="font-size: 16pt; padding-left:4%">Description:</b><br>
<p style="font-size: 16pt; padding-left:6%"><%= @item.description %></p>
<br>

<% if can? :update, @item %>
<%= link_to 'Edit', edit_item_path(@item) %> |
<% end %>
<% if can? :destroy, @item %>
<%= link_to 'Delete Item', item_path(@item), :confirm => 'Are you sure?', :method => :delete %> |
<% end %>
<%= link_to 'Back', items_path %>
