<p id="notice"><%= notice %></p>
<h1> <%= @item.name %> </h1>
<table style="padding-left:40px">
  <tr>
    <td>
        <%= image_tag(@item.picture.url, size:"150x150") %>
    </td>
    <td style="width:50px">
    </td>
    <td style="width:150px">
        <b>Seller:</b><br>
        <b>Price:</b><br>
        <b>Condition:</b><br>
        <b>Tags:</b><br>
        <b>Price Negotiable:</b><br><br>
    </td>
    <td>
      <%= link_to User.find_by_id(@item.user_id).proper_name, User.find_by_id(@item.user_id) %><br>

      <%= number_to_currency(@item.price) %><br>
      <%= @item.condition_name %><br>
      <%= @item.tag %><br>
      <%= @item.price_negotiable ? "Yes" : "No"  %><br>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal">
        Buy
      </button>

      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h3 class="modal-title" id="myModalLabel">Make an Offer</h3>
            </div>
              <%= render 'offers/form' %>            
          </div>
        </div>
      </div>
    </td>
  </tr>
</table>
<br>

<b style="padding-left:40px">Description:</b><br>
<p style="padding-left:55px"><%= @item.description %></p>
<br>

<% if can? :update, @item %>
<%= link_to 'Edit', edit_item_path(@item) %> |
<% end %>
<% if can? :destroy, @item %>
<%= link_to 'Delete Item', item_path(@item), :confirm => 'Are you sure?', :method => :delete %> |
<% end %>
<%= link_to 'Back', items_path %>
